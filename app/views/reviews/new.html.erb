<div class='w-75 container'>
  <h2 class='text-center'>Leave a review for <span class='text-uppercase'><%= @restaurant.name %></span></h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Add", class: 'btn btn-primary w-100 text-light rounded' %>
  <% end %>
</div>
