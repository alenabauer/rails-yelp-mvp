<div class='w-50 container bg-light rounded' style='padding: 24px;'>
  <h2 class='text-center'>Add a new restaurant</h2>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, :collection => %w[chinese italian japanese french belgian] %>
    <%= f.submit 'Create', class: 'btn w-100 rounded my-btn' %>
  <% end %>
</div>
